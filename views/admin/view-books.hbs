<section>
    <div class="container">
        <div class="row mt-2">
            <a href="/admin/add-book" class="btn btn-primary ml-auto">Add Book</a>
        </div>
        <table class="table table-light mt-2">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Title</th>
      <th scope="col">Author</th>
      <th scope="col">Price</th>
      <th scope="col">Image</th>

    </tr>
  </thead>
  <tbody>
    {{#each books}}
    <tr>
      <th scope="row">{{@index}}</th>
      <td>{{this.name}}</td>
      <td>{{this.author}}</td>
      <td>{{this.price}}</td>
      <td><img style="width:50px; height:75px;" src="{{this.img}}" alt=""></td>
    </tr>
    {{/each}}
  </tbody>
</table>
    </div>
</section>